<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffe7eee9"
    tools:context="com.rubick.bechakini.RegisterActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/ivLogo"
        android:src="@drawable/logo_solid"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxHeight="200dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etName"
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/et_bg"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ivLogo"
        android:layout_centerHorizontal="true"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/et_bg"
        android:layout_marginBottom="5dp"
        android:id="@+id/etEmail"
        android:hint="Email"
        android:layout_below="@+id/etName"
        android:layout_alignLeft="@+id/etPass"
        android:layout_alignStart="@+id/etPass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/et_bg"
        android:layout_marginBottom="5dp"
        android:id="@+id/etPass"

        android:layout_below="@+id/etEmail"
        android:layout_alignLeft="@+id/etName"
        android:hint="Password"
        android:layout_alignStart="@+id/etName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:padding="10dp"
        android:background="@drawable/et_bg"
        android:layout_marginBottom="5dp"
        android:id="@+id/etConfPass"
        android:layout_below="@+id/etPass"
        android:layout_alignLeft="@+id/etName"
        android:hint="Confirm Password"
        android:layout_alignStart="@+id/etName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/btnSignIn"
        android:layout_below="@+id/etConfPass"
        android:layout_alignLeft="@+id/etConfPass"
        android:layout_alignStart="@+id/etConfPass"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:background="@drawable/btn_primary"
        android:layout_alignRight="@+id/etConfPass"
        android:layout_alignEnd="@+id/etConfPass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I HAVE AN ACCOUNT"
        android:id="@+id/btnAlreadyHaveAcc"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:layout_below="@+id/btnSignIn"
        android:layout_alignLeft="@+id/etConfPass"
        android:layout_alignStart="@+id/etConfPass"
        android:background="@drawable/btn_secondary"
        android:layout_alignRight="@+id/etConfPass"
        android:layout_alignEnd="@+id/etConfPass" />


</RelativeLayout>
