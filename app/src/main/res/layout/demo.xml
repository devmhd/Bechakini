<?xml version="1.0" encoding="utf-8"?>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:background="#ff42b092"
    >


<RelativeLayout

    android:id="@+id/left_drawer"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_gravity="start"

   >
        <TextView
            android:text="Mehedee Zaman"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/drawer_tv_username"
            android:textAppearance="@android:style/TextAppearance.Large.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <TextView
        android:text="devmhd@gmail.com"
        android:id="@+id/drawer_tv_useremail"
        android:textAppearance="@android:style/TextAppearance.Small.Inverse"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/drawer_tv_username"
        android:layout_alignLeft="@id/drawer_tv_username"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/drawer_btn_newad"
        android:background="@drawable/drawer_btn_background"
        android:layout_below="@+id/drawer_tv_useremail"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView1"
            android:src="@drawable/ic_newad" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView1"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:text="POST NEW AD"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/imageView1"
            android:layout_alignBottom="@id/imageView1"
            android:id="@+id/textView1" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/drawer_btn_myads"
        android:background="@drawable/drawer_btn_background"
        android:layout_below="@+id/drawer_btn_newad"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
      >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/imageView2"
            android:src="@drawable/ic_bookmarks" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView2"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:text="MY ADS"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/imageView2"
            android:layout_alignBottom="@id/imageView2"
            android:id="@+id/textView2" />
    </RelativeLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:id="@+id/drawer_btn_bookmarks"
        android:background="@drawable/drawer_btn_background"
        android:layout_below="@+id/drawer_btn_myads"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_myads" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView3"
            android:textAppearance="?android:attr/textAppearanceMediumInverse"
            android:text="BOOKMARKS"
            android:gravity="center_vertical"
            android:layout_alignTop="@id/imageView3"
            android:layout_alignBottom="@id/imageView3"
            android:id="@+id/textView3" />
    </RelativeLayout>



    <TextView
        android:layout_below="@+id/drawer_btn_bookmarks"
        android:background="#9fff"
        android:id="@+id/divider1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <TextView
        android:layout_below="@id/divider1"
        android:layout_width="match_parent"
        android:id="@+id/filter"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="FILTER BY DIVISION"/>
    <ListView
        android:id="@+id/drawer_list_division"
        android:layout_below="@id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        </ListView>

    <TextView
        android:layout_below="@+id/drawer_list_division"
        android:background="#9fff"
        android:id="@+id/divider2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <TextView
        android:padding="10dp"
        android:id="@+id/drawer_btn_settings"
        android:layout_below="@+id/divider2"
        android:clickable="true"
        android:background="@drawable/drawer_btn_background"
        android:layout_width="match_parent"
        android:text="Settings"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="10dp"
        android:id="@+id/drawer_btn_logout"
        android:layout_below="@+id/drawer_btn_settings"
        android:clickable="true"
        android:background="@drawable/drawer_btn_background"
        android:layout_width="match_parent"
        android:text="Log Out"
        android:textAppearance="?android:attr/textAppearanceSmallInverse"
        android:layout_height="wrap_content" />

</RelativeLayout>
</ScrollView>