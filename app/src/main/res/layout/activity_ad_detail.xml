<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    >


<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.rubick.bechakini.AdDetailActivity">



    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_below="@+id/editorpeaks"
        android:layout_width="fill_parent"
        android:layout_height="200dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:id="@+id/editor_picks_iv0"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_bookmarks" />

            <LinearLayout
                android:orientation="horizontal"
                android:background="#99000000"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:text="Loading..."
                    android:id="@+id/editor_picks_tvName0"
                    android:padding="15dp"
                    android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"

                    android:text="Loading..."
                    android:gravity="end"
                    android:textColor="@color/primary"
                    android:padding="15dp"
                    android:id="@+id/editor_picks_tvPrice0"
                    android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:id="@+id/editor_picks_iv1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_bookmarks" />

            <LinearLayout
                android:orientation="horizontal"
                android:background="#99000000"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:text="Halla"
                    android:id="@+id/editor_picks_tvName1"
                    android:padding="15dp"
                    android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"

                    android:text="Tk 5000"
                    android:gravity="end"
                    android:id="@+id/editor_picks_tvPrice1"
                    android:textColor="@color/primary"
                    android:padding="15dp"
                    android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:id="@+id/editor_picks_iv2"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_bookmarks" />

            <LinearLayout
                android:orientation="horizontal"
                android:background="#99000000"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:text="Halla"
                    android:id="@+id/editor_picks_tvName2"
                    android:padding="15dp"
                    android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"

                    android:text="Tk 5000"
                    android:gravity="end"
                    android:textColor="@color/primary"
                    android:padding="15dp"
                    android:id="@+id/editor_picks_tvPrice2"
                    android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>


    </ViewFlipper>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:textColor="#111"
        android:id="@+id/ad_detail_tv_description"
        android:layout_below="@+id/ad_detail_tv_posted"
        android:textAppearance="?android:attr/textAppearanceSmall"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:gravity="end"
        android:id="@+id/ad_detail_tv_posted"
        android:layout_below="@+id/view_flipper"
        android:textAppearance="?android:attr/textAppearanceSmall"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"

        android:layout_marginTop="50dp"
        android:id="@+id/ad_detail_tv_location"
        android:layout_below="@+id/ad_detail_tv_description"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible"
        android:padding="5dp"
        android:layout_marginRight="15dp"
        android:drawableLeft="@drawable/ic_location"
        android:id="@+id/ad_detail_btn_map"
        android:layout_alignBottom="@+id/ad_detail_tv_location"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />





</RelativeLayout>
</ScrollView>