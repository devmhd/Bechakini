<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rubick.bechakini.RegisterActivity">


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:text="NAME"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/update_et_name"


        android:text="Mehedee Zaman" />


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:text="EMAIL"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_height="wrap_content"
         />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/update_et_email"
        android:hint="Email"
        android:layout_below="@+id/etName"
        android:layout_alignLeft="@+id/etPass"
        android:layout_alignStart="@+id/etPass"
        android:text="devmhd@gmail.com" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:text="YOUR LOCATION"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_height="wrap_content" />

    <AutoCompleteTextView
        android:id="@+id/update_et_autolocation"
        android:text="Basabo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:text="CHANGE PASSWORD"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/update_et_oldpass"
        android:layout_below="@+id/update_et_oldpass"
        android:layout_alignLeft="@+id/etName"
        android:hint="Old password"
        android:layout_alignStart="@+id/etName" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="New password"
        android:id="@+id/update_et_newpass"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="Confirm new password"
        android:ems="10"
        android:id="@+id/update_et_newpassconf" />










</LinearLayout>
