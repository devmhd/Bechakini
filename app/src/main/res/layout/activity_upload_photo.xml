<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rubick.bechakini.UploadPhotoActivity">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a photo"
        android:id="@+id/uploadphoto_btn_AddPhoto"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rubick.bechakini.SquareImageView
                android:layout_weight="1"
                android:id="@+id/uploadPhoto_iv_0"
                android:layout_width="0px"
                android:src="@drawable/bechakini_logo"
                android:layout_height="match_parent" />
            <com.rubick.bechakini.SquareImageView
                android:layout_weight="1"
                android:layout_width="0px"
                android:src="@drawable/bechakini_logo"
                android:layout_height="match_parent"
                android:id="@+id/uploadPhoto_iv_1" />
            <com.rubick.bechakini.SquareImageView
                android:layout_weight="1"
                android:layout_width="0px"
                android:id="@+id/uploadPhoto_iv_2"
                android:src="@drawable/bechakini_logo"
                android:layout_height="match_parent" />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="Remove"
                android:id="@+id/uploadPhoto_btnRm_0"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="Remove"
                android:id="@+id/uploadPhoto_btnRm_1"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="Remove"
                android:id="@+id/uploadPhoto_btnRm_2"
                android:layout_height="wrap_content" />
            </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rubick.bechakini.SquareImageView
                android:layout_weight="1"
                android:layout_width="0px"
                android:src="@drawable/bechakini_logo"
                android:id="@+id/uploadPhoto_iv_3"
                android:layout_height="match_parent" />
            <com.rubick.bechakini.SquareImageView
                android:layout_weight="1"
                android:layout_width="0px"
                android:id="@+id/uploadPhoto_iv_4"
                android:src="@drawable/bechakini_logo"
                android:layout_height="match_parent" />
            <com.rubick.bechakini.SquareImageView
                android:layout_weight="1"
                android:layout_width="0px"
                android:id="@+id/uploadPhoto_iv_5"
                android:src="@drawable/bechakini_logo"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="Remove"
                android:id="@+id/uploadPhoto_btnRm_3"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="Remove"
                android:id="@+id/uploadPhoto_btnRm_4"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="0px"
                android:layout_weight="1"
                android:text="Remove"
                android:id="@+id/uploadPhoto_btnRm_5"
                android:layout_height="wrap_content" />
        </LinearLayout>

        </LinearLayout>


</RelativeLayout>
